# Job Pipeline Tracker - Configuration Example
# Copy this to .env and fill in your values

# Gemini API Keys (comma-separated for rotation)
# Get from https://aistudio.google.com/apikey
# Single key: GEMINI_API_KEYS=your_key_here
# Multiple keys: GEMINI_API_KEYS=key1,key2,key3
GEMINI_API_KEYS=your_gemini_api_key_here

# Email Settings (Gmail example - use App Password, not regular password)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ============================================================
# JOB SOURCES CONFIGURATION
# ============================================================
# Option 1: Simple URL list (all use same fetch method)
# JOB_URLS=https://careers.google.com/jobs,https://example.com/careers

# Option 2: Enhanced JSON format with per-source settings
# JOB_SOURCES=[{"url": "https://metacareers.com/jobs", "name": "Meta", "requires_browser": true}, {"url": "https://example.com/jobs", "name": "Example", "requires_browser": false}]

# Default fetch mode for simple JOB_URLS (true=browser, false=HTTP)
DEFAULT_USE_BROWSER=true

# Check interval in hours
CHECK_INTERVAL_HOURS=6

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
# Log level for file logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log level for console output (DEBUG, INFO, WARNING, ERROR)
CONSOLE_LOG_LEVEL=INFO
